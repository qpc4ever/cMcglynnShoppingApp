@model IEnumerable<cMcglynnShoppingApp.Models.CodeFirst.Item>


<div class="row">
    <div class="w3-main" style="margin-left:330px">
        @if (User.IsInRole("Admin"))
        {
            <div style=" padding-left:15px;">

                <button style="border-radius: 8px;margin-top:8px;margin-bottom:8px;border: 2px solid white;" class="w3-button w3-ripple w3-black">@Html.ActionLink("Create New ", "Create")</button>
            </div>
        }


        @foreach (var item in Model)
        {
            <div class="col-md-3" style="margin-top:20px;">
                <a href="@Url.Action("Details", "Items" , new { id = item.Id })">
                    <img src="@item.MediaURL" />
                </a>

                <div style="padding-top:20px;padding-bottom:10px;text-shadow:1px 1px 0 #444;">
                    <p>@item.Name</p>
                    <p>@item.Price</p>
                    @using (Html.BeginForm("Create", "CartItems", new { id = item.Id }, FormMethod.Post))
                    {    //To keep secure
                        @Html.AntiForgeryToken()
                        //input type button
                        <input type="submit" style="border-radius: 8px;" class="w3-button w3-ripple w3-black" value="Add to cart" />
                    
                    <div style="margin-left:580px;background-color:white;padding-bottom:0px;">
                        <iframe width="420" height="315"
                                src="https://www.youtube.com/embed/sEBdUiQx6_k?autoplay=1"></iframe>
                    </div>
                    }
                </div>
                    
                @if (User.IsInRole("Admin"))
                {
                    <div style="display:inline-flex">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </div>
                }

            </div>


        }

    </div>
</div>

