@model IEnumerable<cMcglynnShoppingApp.Models.CodeFirst.Item>    
@*IENUMERABLE FILTERS THROUGH WHATS PASSED THROUGH IT AND CREATES A LIST*@

<div class="row">
    <div class="w3-main" style="margin-left:330px">
        
        @*"CREATE LINK" ONLY VISIBLE IF LOGGED IN AS ADMIN*@
        @if (User.IsInRole("Admin"))
        {
            <div style="padding-left:15px; margin-top:8px;margin-bottom:8px;">
                
                <button style="border-radius: 8px;border: 2px; margin-top:2px; solid white;" class="w3-button w3-ripple w3-black">@Html.ActionLink("Create New ", "Create")</button>
            </div>
        }

       
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                @*MAKES THE PICTURE OF THE ITEM LINK TO THE "DETAILS" PAGE*@
                <a href="@Url.Action("Details", "Items" , new { id = item.Id })">
                    <img src="@Url.Content(item.MediaURL)" />
                </a>

                <div style="padding-top:20px;padding-bottom:10px;text-shadow:1px 1px 0 #444">
                    <p>@item.Name</p>
                    <p>@item.Price</p>
                      @*// CODE TO ADD ITEMS TO CART also begining of "FORM"*@
                    @using (Html.BeginForm("Create", "CartItems", new { id = item.Id }, FormMethod.Post))
                    {    //To keep secure
                        @Html.AntiForgeryToken()
                        //input type button
                        <input type="submit" style="border-radius: 8px;"  class="w3-button w3-ripple w3-black " value="Add to cart" /><i class="fa fa-shopping-cart"></i>

                    }
                   
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <div style="display:inline-flex">
                        <button style="border-radius: 8px;border: 2px solid white; margin-top:2px;" class="w3-button w3-ripple w3-blue">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                        <button style="border-radius: 8px;border: 2px solid white; margin-top:2px;" class="w3-button w3-ripple w3-blue">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                       
                    </div>
                }

            </div>


        }

    </div>
