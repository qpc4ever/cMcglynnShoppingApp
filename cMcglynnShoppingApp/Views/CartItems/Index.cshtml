@model IEnumerable<cMcglynnShoppingApp.Models.CodeFirst.CartItem>
<div style="margin-left:330px; font:bolder; font-family:'Franklin Gothic Book';">
    @{
        ViewBag.Title = "Index";
    }

    <h2>Your Cart</h2>
@if (User.IsInRole("Admin"))
{
    <p style="margin-top:4px;">
        <button style="border-radius: 8px;border: 2px solid white;" class="w3-button w3-ripple w3-black">@Html.ActionLink("Create New ", "Create")</button>
    </p>
}
    <table class="table">
        <tr>
            @*<th>
                    Customer
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CustomerId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
                @*UnitTotal*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Customer.FullName)
                    </td>*@
                <td>
                    @item.Item.Name
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.Price)
                    @*$@(item.Count * item.Item.Price )*@
                </td>
                <td style="display:inline-flex">

                    <button style="border-radius: 8px;border: 2px solid white; margin-top:2px;" class="w3-button w3-ripple w3-blue">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>
                    <button style="border-radius: 8px;border: 2px solid white; margin-top:2px;" class="w3-button w3-ripple w3-blue">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
                    <button style="border-radius: 8px;border: 2px solid white; margin-top:2px;" class="w3-button w3-ripple w3-blue">@Html.ActionLink("Details", "Details", "Items", new { id = item.Item.Id }, null)</button>
                </td>
            </tr>
        }

    </table>
    <p>
        Total : $@ViewBag.CartTotal   @*Adds Total To Shopping Cart*@
    </p>


    <a href="@Url.Action("Create", "Orders")" class="btn btn-danger" style="border-radius: 8px">Proceed To Checkout</a>
</div>